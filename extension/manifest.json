{
  "manifest_version": 3,
  "name": "YTM Lyrics Sender",
  "version": "1.0",
  "permissions": ["background", "storage"],
  "host_permissions": [
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ]
}
